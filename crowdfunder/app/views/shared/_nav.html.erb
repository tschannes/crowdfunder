
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">CrowdFunder</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if current_page? root_path %>">
            <%= link_to 'Home', :root %>
          </li>
          <li class="<%= 'active' if  (current_page? projects_path) || (current_page? project_path(@project)) %>">
            <%= link_to 'Projects', :projects %>
          </li>
          <% if !current_user %>
            <li>
              <%= link_to 'Sign Up', signup_path %>
            </li>
            <li>
              <%= link_to 'Sign In', login_path %>
            </li>
          <% else %>
            <li class="<%= 'active' if  (current_page? new_my_project_path) || (current_page? my_projects_path) || (current_page? my_project_path(@project)) %>">
              <%= link_to 'My Projects', my_projects_path %>
            </li>
            <li>
              <%= link_to 'New Project', new_my_project_path %>
            </li>
            <li>
              <%= link_to 'Logout', logout_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>