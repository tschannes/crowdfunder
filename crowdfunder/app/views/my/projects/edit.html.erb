<%= form_for [:my, @project] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :teaser %>
  <%= f.text_field :teaser %><br />

  <%= f.label :description %>
  <%= f.text_field :description %><br />

  <%= f.label :goal %>
  <%= f.text_field :goal %><br />

	<%= f.submit "Update Project", { :class => 'btn' } %>

<% end %>

<%= link_to "Delete Project", [ :my, @project ], data: { confirm: "Are you sure you want to delete #{@project.title}?" }, :method => :delete %>